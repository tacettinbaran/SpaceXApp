<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:card_view="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:id="@+id/activity_rocket"
		tools:context=".RocketActivity"
		android:background="#d3e0dc">
	
	
	<com.smarteist.autoimageslider.SliderView
			android:id="@+id/imageSlider"
			android:layout_width="match_parent"
			android:layout_height="250dp"
			app:sliderAnimationDuration="600"
			app:sliderAutoCycleEnabled="true"
			app:sliderIndicatorAnimationDuration="600"
			app:sliderIndicatorGravity="center_horizontal|bottom"
			app:sliderIndicatorMargin="15dp"
			app:sliderIndicatorOrientation="horizontal"
			app:sliderIndicatorPadding="3dp"
			app:sliderIndicatorRadius="2dp"
			app:sliderIndicatorSelectedColor="#5A5A5A"
			app:sliderIndicatorUnselectedColor="#FFF"
			app:sliderScrollTimeInSec="2"/>
	
	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
			
			<androidx.cardview.widget.CardView
					app:cardCornerRadius="6dp"
					android:layout_margin="5dp"
					android:layout_width="match_parent"
					card_view:cardBackgroundColor="#bbf1fa"
					android:layout_height="wrap_content">
				
				<TextView android:layout_width="match_parent"
				          android:layout_height="wrap_content"
				          android:layout_marginBottom="5dp"
				          android:id="@+id/rocket_detail_id"/>
			</androidx.cardview.widget.CardView>
			
			<androidx.cardview.widget.CardView
					app:cardCornerRadius="6dp"
					android:layout_margin="5dp"
					android:layout_width="match_parent"
					card_view:cardBackgroundColor="#bbf1fa"
					android:layout_height="wrap_content">
				
				<TextView android:layout_width="match_parent"
				          android:layout_height="wrap_content"
				          android:layout_marginBottom="5dp"
				          android:id="@+id/rocket_detail_active"/>
			</androidx.cardview.widget.CardView>
			
			<androidx.cardview.widget.CardView
					app:cardCornerRadius="6dp"
					android:layout_margin="5dp"
					android:layout_width="match_parent"
					card_view:cardBackgroundColor="#bbf1fa"
					android:layout_height="wrap_content">
				
				<TextView android:layout_width="match_parent"
				          android:layout_height="wrap_content"
				          android:layout_marginBottom="5dp"
				          android:id="@+id/rocket_detail_stages"/>
			</androidx.cardview.widget.CardView>
			
			<androidx.cardview.widget.CardView
					app:cardCornerRadius="6dp"
					android:layout_margin="5dp"
					android:layout_width="match_parent"
					card_view:cardBackgroundColor="#bbf1fa"
					android:layout_height="wrap_content">
				
				<TextView android:layout_width="match_parent"
				          android:layout_height="wrap_content"
				          android:layout_marginBottom="5dp"
				          android:id="@+id/rocket_detail_boosters"/>
			</androidx.cardview.widget.CardView>
			
			<androidx.cardview.widget.CardView
					app:cardCornerRadius="6dp"
					android:layout_margin="5dp"
					android:layout_width="match_parent"
					card_view:cardBackgroundColor="#bbf1fa"
					android:layout_height="wrap_content">
				
				<TextView android:layout_width="match_parent"
				          android:layout_height="wrap_content"
				          android:layout_marginBottom="5dp"
				          android:id="@+id/rocket_detail_cost_per_launch"/>
			</androidx.cardview.widget.CardView>
			
			<androidx.cardview.widget.CardView
					app:cardCornerRadius="6dp"
					android:layout_margin="5dp"
					android:layout_width="match_parent"
					card_view:cardBackgroundColor="#bbf1fa"
					android:layout_height="wrap_content">
				
				<TextView android:layout_width="match_parent"
				          android:layout_height="wrap_content"
				          android:layout_marginBottom="5dp"
				          android:id="@+id/rocket_detail_success_rate_pct"/>
			</androidx.cardview.widget.CardView>
			
			<androidx.cardview.widget.CardView
					app:cardCornerRadius="6dp"
					android:layout_margin="5dp"
					android:layout_width="match_parent"
					card_view:cardBackgroundColor="#bbf1fa"
					android:layout_height="wrap_content">
				
				<TextView android:layout_width="match_parent"
				          android:layout_height="wrap_content"
				          android:layout_marginBottom="5dp"
				          android:id="@+id/rocket_detail_first_flight"/>
			</androidx.cardview.widget.CardView>
			
			<androidx.cardview.widget.CardView
					app:cardCornerRadius="6dp"
					android:layout_margin="5dp"
					card_view:cardBackgroundColor="#bbf1fa"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
				
				<TextView android:layout_width="match_parent"
				          android:layout_height="wrap_content"
				          android:layout_marginBottom="5dp"
				          android:id="@+id/rocket_detail_country"/>
			
			</androidx.cardview.widget.CardView>
			
			<androidx.cardview.widget.CardView
					app:cardCornerRadius="6dp"
					android:layout_margin="5dp"
					card_view:cardBackgroundColor="#bbf1fa"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
				
				<TextView android:layout_width="match_parent"
				          android:layout_height="wrap_content"
				          android:layout_marginBottom="5dp"
				          android:id="@+id/rocket_detail_company"/>
			</androidx.cardview.widget.CardView>
			
			<androidx.cardview.widget.CardView
					app:cardCornerRadius="6dp"
					android:layout_margin="5dp"
					card_view:cardBackgroundColor="#bbf1fa"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
				
				<TextView android:layout_width="match_parent"
				          android:layout_height="wrap_content"
				          android:layout_marginBottom="5dp"
				          android:id="@+id/rocket_detail_height_meters"/>
			</androidx.cardview.widget.CardView>
			
			<androidx.cardview.widget.CardView
					app:cardCornerRadius="6dp"
					android:layout_margin="5dp"
					card_view:cardBackgroundColor="#bbf1fa"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
				
				<TextView android:layout_width="match_parent"
				          android:layout_height="wrap_content"
				          android:layout_marginBottom="5dp"
				          android:id="@+id/rocket_detail_height_feet"/>
			</androidx.cardview.widget.CardView>
			
			
			<androidx.cardview.widget.CardView
					app:cardCornerRadius="6dp"
					android:layout_margin="5dp"
					card_view:cardBackgroundColor="#bbf1fa"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
				
				<TextView android:layout_width="match_parent"
				          android:layout_height="wrap_content"
				          android:layout_marginBottom="5dp"
				          android:id="@+id/rocket_detail_rocket_id"/>
			</androidx.cardview.widget.CardView>
			
			<androidx.cardview.widget.CardView
					app:cardCornerRadius="6dp"
					android:layout_margin="5dp"
					card_view:cardBackgroundColor="#bbf1fa"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
				
				<TextView android:layout_width="match_parent"
				          android:layout_height="wrap_content"
				          android:layout_marginBottom="5dp"
				          android:id="@+id/rocket_detail_rocket_name"/>
			</androidx.cardview.widget.CardView>
			
			<androidx.cardview.widget.CardView
					app:cardCornerRadius="6dp"
					android:layout_margin="5dp"
					card_view:cardBackgroundColor="#bbf1fa"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
				
				<TextView android:layout_width="match_parent"
				          android:layout_height="wrap_content"
				          android:layout_marginBottom="5dp"
				          android:id="@+id/rocket_detail_rocket_type"/>
			
			</androidx.cardview.widget.CardView>
			
			<androidx.cardview.widget.CardView
					app:cardCornerRadius="6dp"
					android:layout_margin="5dp"
					card_view:cardBackgroundColor="#bbf1fa"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
				
				<TextView android:layout_width="match_parent"
				          android:layout_height="wrap_content"
				          android:layout_marginBottom="5dp"
				          android:id="@+id/rocket_detail_description"/>
			</androidx.cardview.widget.CardView>
			
			<androidx.cardview.widget.CardView
					app:cardCornerRadius="6dp"
					android:layout_margin="5dp"
					card_view:cardBackgroundColor="#bbf1fa"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
				
				<TextView android:layout_width="match_parent"
				          android:layout_height="wrap_content"
				          android:layout_marginBottom="5dp"
				          android:id="@+id/rocket_detail_height_wikipedia"/>
			</androidx.cardview.widget.CardView>
		
		
		</LinearLayout>
	</ScrollView>

</LinearLayout>